@inherits AttributableComponentBase

<div class="card text-white bg-dark @CssClass" @attributes="@AdditionalAttributes">
    @if (Content != null)
    {
        @Content
    }
    else
    {
        <CardBody>
            @ChildContent
        </CardBody>
    }
</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }

    [Parameter] public RenderFragment Content { get; set; }
}