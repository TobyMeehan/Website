@inherits AttributableComponentBase

@if (ImageUrl != null)
{
    <img src="@ImageUrl" class="rounded avatar @CssClass" @attributes="AdditionalAttributes" />
}
else
{
    @if (Default != null)
    {
        @Default
    }
    else
    {
        <svg role="img" class="rounded avatar @CssClass" @attributes="AdditionalAttributes">
            <rect width="100%" height="100%" fill="@FillColour"></rect>
            <text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" fill="@TextColour">
                @Text.First()
            </text>
        </svg>
    }
}

@code {
    [Parameter] public string Text { get; set; }

    [Parameter] public string ImageUrl { get; set; }


    [Parameter] public string FillColour { get; set; } = "#6c757d";

    [Parameter] public string TextColour { get; set; } = "#f8f9fa";


    [Parameter] public RenderFragment Default { get; set; }
}
