<InputComment User="User" OnSubmit="OnCommentAdded"></InputComment>

<hr />

<ul class="list-unstyled">
    @foreach (var comment in Comments)
    {
        <CommentThread class="mb-4" Comment="comment"></CommentThread>
    }
</ul>

@code {
    [Parameter] public User User { get; set; }
    [Parameter] public EventCallback<CommentViewModel> OnCommentAdded { get; set; }
    [Parameter] public IEnumerable<Comment> Comments { get; set; }
}
