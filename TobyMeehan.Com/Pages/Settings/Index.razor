@page "/me"
@layout SettingsLayout

@inject JavaScript interop

<Title>My Account</Title>

<AuthorizeView>
    <Card class="my-3">
        <h3>
            <InputAvatar User="CurrentUser" Id="UploadAvatar" OnChange="ProfilePicture_Change" OnDelete="RemoveProfilePicture"></InputAvatar>

            <Username User="CurrentUser" IncludeAvatar="false"></Username>
        </h3>
    </Card>

    <Card class="my-3">
        <div class="form-group">
            <label for="Username">Username</label>
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control-plaintext form-control-sm p-1" id="Username" value="@CurrentUser.Username" readonly />
                </div>
                <div class="col">
                    <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#SettingsModal" @onclick="interop.ShowUsernameTab">Change</button>
                </div>
            </div>
        </div>

        <hr />

        <EditForm Model="CurrentUser" OnValidSubmit="DescriptionForm_Submit" Context="editContext">
            <div class="form-group">
                <label>Description</label>
                <InputRichText Id="Description" @bind-Value="CurrentUser.Description" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </EditForm>
    </Card>

    <Card class="my-3">
        <div class="form-group">
            <button class="btn btn-warning" data-toggle="modal" data-target="#SettingsModal" @onclick="interop.ShowPasswordTab">Change Password</button>
            <button class="btn btn-danger" data-toggle="modal" data-target="#SettingsModal" @onclick="interop.ShowAccountTab">Delete Account</button>
        </div>
    </Card>
</AuthorizeView>

<Modal id="SettingsModal">
    <Title>
        <i class="fas fa-user-edit"></i> Account Information
    </Title>
    <Body>
        <AccountSettingsForm @ref="_form" OnUsernameSubmit="UsernameForm_Submit" OnPasswordSubmit="PasswordForm_Submit" OnDeleteAccountSubmit="AccountForm_Submit"></AccountSettingsForm>
    </Body>
</Modal>

@code {
    private RenderFragment _alertContent =>@<span>Your password was changed.</span>;
}