@page "/downloads/add"

<Title Value="Add Download"></Title>
<h1>Add Download</h1>

<EditForm Model="_downloadForm" Context="formContext" OnValidSubmit="DownloadForm_Submit">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label for="Title">Title</label>
        <div class="col-md-10">
            <InputText id="Title" @bind-Value="_downloadForm.Title" class="form-control" />
            <ValidationMessage For="() => _downloadForm.Title" />
        </div>
    </div>

    <div class="form-group">
        <label for="ShortDescription">Short Description</label>
        <div class="col-md-10">
            <InputText id="ShortDescription" @bind-Value="_downloadForm.ShortDescription" class="form-control" />
            <ValidationMessage For="() => _downloadForm.ShortDescription" />
        </div>
    </div>

    <div class="form-group">
        <label for="LongDescription">Long Description</label>
        <div class="col-md-10">
            <InputRichText Id="LongDescription" @bind-Value="_downloadForm.LongDescription" />
            <ValidationMessage For="() => _downloadForm.LongDescription" />
        </div>
    </div>

    <div class="form-group">
        <ProcessButton type="submit" class="btn btn-dark" @ref="_submitButton">Continue</ProcessButton>
    </div>
</EditForm>

<p>
    <a href="/downloads">Back to List</a>
</p>
