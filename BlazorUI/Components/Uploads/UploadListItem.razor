<li class="@GetCssClass()">
    <div class="d-flex w-100 justify-content-between">
        <span class="mr-2">
            <FileIcon Filename="@Upload.Filename"></FileIcon>
            @Upload.Filename
        </span>
        @CloseButton
    </div>

    @Content
</li>

@code {
    [Parameter] public RenderFragment Content { get; set; }

    [Parameter] public RenderFragment CloseButton { get; set; }

    [Parameter] public FileUpload Upload { get; set; }

    private string GetCssClass()
    {
        string result = "list-group-item list-group-item-";

        result += Upload?.Status switch
        {
            UploadFileResult.Success => "success",
            UploadFileResult.Cancelled => "warning",
            UploadFileResult.Failed => "danger",
            UploadFileResult.Queued => "info",
            _ => "default"
        };

        return result;
    }
}