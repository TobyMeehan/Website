@using System.Web;
@using BlazorUI.Extensions;

<AuthorizeView>
    <Authorized>
        <div class="btn-group">
            <a class="btn btn-outline-light my-2 my-sm-0" href="/me"><DisplayUser Username="@(context.User.GetUsername())" /></a>

            <div class="btn-group">
                <button id="BtnAccountsDropdown" type="button" class="btn btn-outline-light dropdown-toggle" data-toggle="dropdown"></button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="BtnAccountsDropdown">
                    <a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <a class="btn btn-outline-light my-2 my-sm-0" href="/login"><i class="fas fa-sign-in-alt"></i> Login</a>
    </NotAuthorized>
</AuthorizeView>
