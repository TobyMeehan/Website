@model IEnumerable<WebApi.Models.Application>

@{
    ViewData["Title"] = "Developer";
    Layout = "~/Views/Shared/_DeveloperLayout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RedirectUri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Secret)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RedirectUri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Secret)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { appid = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { appid = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p>You haven't created any applications.</p>
}
