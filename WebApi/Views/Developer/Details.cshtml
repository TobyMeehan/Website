@model WebApi.Models.Application

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_DeveloperLayout.cshtml";
}

<h1>@Model.Name</h1>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Client Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Redirect Uri
        </dt>
        <dd class="col-sm-10">
            @Model.RedirectUri
        </dd>
        <dt class="col-sm-2">
            Client Secret
        </dt>
        <dd class="col-sm-10">
            @Model.Secret
        </dd>
        <dt class="col-sm-2">
            Role
        </dt>
        <dd class="col-sm-10">
            @Model.Role
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { appid = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>

@section CustomDevNavItem {
    <li class="nav-item">
        <a asp-action="Details" class="nav-link active">View @Model.Name</a>
    </li>
}
