@model WebApi.Models.ApplicationFormModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DeveloperLayout.cshtml";
 }

<form asp-action="Edit">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RedirectUri" class="control-label"></label>
        <input asp-for="RedirectUri" class="form-control" />
        <span asp-validation-for="RedirectUri" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Scoreboard" asp-route-appid="@Model.Id">Scoreboard</a> |
    <a asp-action="Index">Back to List</a>
</div>

@section CustomDevNavItem {
    <li class="nav-item">
        <a asp-action="Edit" class="nav-link active">Edit @Model.Name</a>
    </li>
}

