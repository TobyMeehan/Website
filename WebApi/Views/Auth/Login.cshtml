@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<p>Log in to your TobyMeehan account to access OAuth functionality with the API.</p>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(x => Model.Username)
        @Html.EditorFor(x => Model.Username)
        @Html.ValidationMessageFor(x => Model.Username)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => Model.Password)
        @Html.EditorFor(x => Model.Password)
        @Html.ValidationMessageFor(x => Model.Password)
    </div>

    <button type="submit" class="btn btn-dark">Login</button>
}